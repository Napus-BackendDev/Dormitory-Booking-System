generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ticket {
  id          String   @id @default(cuid())
  code        String   @unique
  title       String
  description String
  status      String
  priority    String
  dueAt       DateTime
  createdAt   DateTime @default(now())

  // SLA Fields
  slaResponseDueAt DateTime?
  slaResolveDueAt  DateTime?
  acknowledgedAt   DateTime?
  resolvedAt       DateTime?
  responseWarnAt  DateTime?
  resolveWarnAt   DateTime?
  responseBreached Boolean @default(false)
  resolvedBreached Boolean @default(false)

  onHoldSeconds Int     @default(0)

  events      TicketEvent[]
  attachments Attachment[]
  survey      Survey?

  @@index([status,slaResponseDueAt])
  @@index([status,slaResolveDueAt])
}

model TicketEvent {
  id        String   @id @default(cuid())
  ticketId  String
  type      String?
  note      String?
  createdAt DateTime @default(now())
  createdBy String

  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  @@index([ticketId])
}

model Attachment {
  id        String   @id @default(cuid())
  ticketId  String
  url       String?
  type      String?
  createdAt DateTime @default(now())

  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  @@index([ticketId])
}

model Survey {
  id       String  @id @default(cuid())
  ticketId String  @unique
  score    Int
  comment  String?

  ticket   Ticket  @relation(fields: [ticketId], references: [id], onDelete: Cascade)
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String   
  role      String  @default("USER")
  createdAt DateTime @default(now())
}