generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums //
enum TicketPriority {
  P1
  P2
  P3
  P4
}

enum TicketType {
  CREATED
  ASSIGNED
  STARTED
  CLOSED
}

enum AttachmentType {
  IMAGE
  VIDEO
}

// Schema Models //
model Ticket {
  id           String         @id @default(cuid())
  code         String         @unique
  title        String
  description  String
  status       String
  priority     TicketPriority
  dueAt        DateTime
  createdAt    DateTime       @default(now())
  repairTypeId String? // Foreign key to RepairType
  locationId   String? // Foreign key to Location

  // Relations
  repairType  RepairType?   @relation(fields: [repairTypeId], references: [id])
  location    Location?     @relation(fields: [locationId], references: [id])
  ticketEvent TicketEvent[]
  attachment  Attachment[]
  survey      Survey[]
}

model TicketEvent {
  id        String     @id @default(cuid())
  type      TicketType
  note      String?
  createdAt DateTime   @default(now())
  ticketId  String? // Foreign key to Ticket

  // Relations
  ticket Ticket? @relation(fields: [ticketId], references: [id])
}

model Attachment {
  id        String         @id @default(cuid())
  url       String
  type      AttachmentType
  createdAt DateTime       @default(now())
  ticketId  String? // Foreign key to Ticket

  // Relations
  ticket Ticket? @relation(fields: [ticketId], references: [id])
}

model RepairType {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())

  // Relations
  Ticket Ticket[]
}

model Location {
  id        String   @id @default(cuid())
  name      String   @unique
  address   String
  createdAt DateTime @default(now())

  // Relations
  Ticket Ticket[]
}

model Survey {
  id        String   @id @default(cuid())
  score     Int
  comment   String?
  createdAt DateTime @default(now())
  ticketId  String? // Foreign key to Ticket

  // Relations
  ticket Ticket? @relation(fields: [ticketId], references: [id])
}

model Role {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())

  // Relations
  User User[]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  roleId    String? // Foreign key to Role

  // Relations
  role Role? @relation(fields: [roleId], references: [id])
}
